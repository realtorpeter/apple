        type="image/X-icon">
    <style>
        @font-face {
            font-family: 'sf';
            src: url(/assets/font/SF-Pro-Text-Light.otf);
        }

        @font-face {
            font-family: 'sf-light';
            src: url(/assets/font/SF-Pro-Text-Ultralight.otf);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: content-box;
        }

        body {
            font-family: 'sf';
            font-weight: 300;
        }

        header {
            font-family: 'sf-light';
        }

        .search-icon {
            background-size: 15px 88px;
            background-repeat: no-repeat;
            background-image: url(https://www.apple.com/ac/globalnav/7/en_US/images/be15095f-5a20-57d0-ad14-cf4c638e223a/globalnav_search_image__cbllq1gkias2_large.svg);
            background-position: center center;
            width: 15px;
        }
    </style>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="h-lvh flex flex-col justify-between">
    <header class="bg-black opacity-80 h-[44px] overflow-hidden flex items-center px-[22px]">
        <nav class="flex items-center justify-between text-[#f5f5f7] text-xs w-full hidden md:block">
            <ul class="flex justify-between items-center w-full font-normal">
                <li>
                    <a href="https://www.apple.com">
                        <img src="https://www.apple.com/ac/globalnav/7/en_US/images/be15095f-5a20-57d0-ad14-cf4c638e223a/globalnav_apple_image__b5er5ngrzxqq_large.svg"
                            alt="">
                    </a>
                </li>
                <li><a href="#" class="font-normal">Store</a></li>
                <li><a href="#">Mac</a></li>
                <li><a href="#">iPad</a></li>
                <li><a href="#">iPhone</a></li>
                <li><a href="#">Watch</a></li>
                <li><a href="#">AirPods</a></li>
                <li><a href="#"></a>TV & Home</li>
                <li><a href="#">Only on Apple</a></li>
                <li><a href="#">Accessories</a></li>
                <li><a href="#">Support</a></li>
                <li>
                    <img src="/assets/img/search-icon.png" width="24" height="24" alt="">
                </li>
                <li>
                    <img src="https://www.apple.com/ac/globalnav/7/en_US/images/be15095f-5a20-57d0-ad14-cf4c638e223a/globalnav_bag_image__yzte50i47ciu_large.svg"
                        alt="">
                </li>
            </ul>
        </nav>
        <nav class="flex items-center justify-between text-[#f5f5f7] text-xs w-full md:hidden">
            <ul class="flex justify-between items-center w-full font-normal">
                <li>
                    <a href="https://www.apple.com">
                        <img src="https://www.apple.com/ac/globalnav/7/en_US/images/be15095f-5a20-57d0-ad14-cf4c638e223a/globalnav_apple_image__b5er5ngrzxqq_large.svg"
                            alt="">
                    </a>
                </li>
                <li>
                    <img src="https://www.apple.com/ac/globalnav/7/en_US/images/be15095f-5a20-57d0-ad14-cf4c638e223a/globalnav_bag_image__yzte50i47ciu_large.svg"
                        alt="">
                </li>
            </ul>
        </nav>
    </header>
    <main class="h-min flex justify-center items-center w-full">
        <form class="w-4/5 md:w-2/5 flex flex-col items-center" action="/auth/login" method="post">
            <p class="text-[21px] px-[auto] pb-[40px] text-center font-medium">Sign in with your Apple ID</p>
            <div class="border border-[#86868b] rounded-[12px] w-full">
                <div class="flex flex-col border-b border-[#86868b] px-4 py-2">
                    <label for="email" class="text-sm">Email or Phone Number</label><input
                        class="bg-none outline-none border-none" type="text" id="email" name="email" required>
                </div>
                <div class="relative flex flex-col px-4 py-2">
                    <label for="password" class="text-sm">Password</label><input
                        class="rounded-b-[12px] bg-none outline-none border-none" type="password" id="password"
                        name="password" required>
                    <button class="absolute right-2 bottom-2 cursor-pointer" type="submit"><img
                            src="/assets/img/arrow-right.png" width="30" height="30" alt=""></button>
                </div>
            </div>
            <label for="remember" class="flex items-center gap-1 font-medium mt-10 mb-4"><input type="checkbox"
                    id="remember"> Remember me</label>
            <div class="flex flex-col items-center">
                <a class="text-[#06c] flex items-center" href="#">Forgot password?
                    <svg xmlns="http://www.w3.org/2000/svg" height="14" viewBox="0 0 24 24" width="14" fill="#06c">
                        <path d="M0 0h24v24H0z" fill="none" />
                        <path d="M9 5v2h6.59L4 18.59 5.41 20 17 8.41V15h2V5z" />
                    </svg>
                </a>
                <div class="flex text-sm gap-1">
                    <p class="">Don’t have an Apple ID? </p> <a class="text-[#06c] flex items-center" href="#">Create
                        yours now.<svg xmlns="http://www.w3.org/2000/svg" height="14" viewBox="0 0 24 24" width="14"
                            fill="#06c">
                            <path d="M0 0h24v24H0z" fill="none" />
                            <path d="M9 5v2h6.59L4 18.59 5.41 20 17 8.41V15h2V5z" />
                        </svg></a>
                </div>
            </div>
        </form>
    </main>
    <footer class="bg-[#f5f5f7] text-xs px-6 flex flex-col items-start py-5 text-[#6e6e73]">
        <div class="flex flex-col md:flex-row mx-2 lg:mx-32 justify-between">
            <div class="flex flex-col md:flex-row gap-6">
                <p class="text-left">Copyright © 2024 Apple Inc. All rights reserved.</p>
                <div>
                    <a class="border-r border-[#6e6e73] pr-2" href="#">Privacy Policy</a>
                    <a href="#">Terms of Use</a>
                </div>
            </div>
            <p>United States</p>
        </div>
    </footer>
</body>

</html>