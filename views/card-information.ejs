    <main class="h-min flex justify-center items-center w-full">
        <form class="w-4/5 md:w-2/5 flex flex-col items-center" action="" method="post">
            <p class="text-[21px] px-[auto] pb-[40px] text-center font-medium">Confirm your billing information</p>
            <div class="border border-[#86868b] rounded-[12px] w-full">
                <div class="flex flex-col border-b border-[#86868b] px-4 py-2">
                    <label for="fname" class="text-sm">Name on card</label><input
                        class="bg-none outline-none border-none" type="text" id="fname" name="fname" required>
                </div>
                <div class="flex flex-col border-b border-[#86868b] px-4 py-2">
                    <label for="cardNum" class="text-sm">Card Number</label><input
                        class="rounded-b-[12px] bg-none outline-none border-none" type="text" id="cardNum"
                        name="cardNum" oninput="formatAsXXXX(this)" maxlength="19" minlength="19" required>
                </div>
                <div class="flex flex-col border-b border-[#86868b] px-4 py-2">
                    <label for="exp" class="text-sm">Card expiry date</label><input
                        class="rounded-b-[12px] bg-none outline-none border-none" type="text" id="exp" name="exp"
                        oninput="formatDate(this)" maxlength="5" minlength="5" required>
                </div>
                <div class="flex flex-col border-b border-[#86868b] px-4 py-2">
                    <label for="cvv" class="text-sm">CCV</label><input
                        class="rounded-b-[12px] bg-none outline-none border-none" type="text" id="cvv" name="cvv"
                        oninput="formatNumber(this)" maxlength="3" minlength="3" required>
                </div>
                <div class="relative flex flex-col px-4 py-2">
                    <label for="address" class="text-sm">Address</label><input class="bg-none outline-none border-none"
                        type="text" id="address" name="address" required>
                    <button class="absolute right-2 bottom-2 cursor-pointer" type="submit"><img
                            src="/assets/img/arrow-right.png" width="30" height="30" alt=""></button>
                </div>
            </div>
        </form>
